@model AplicacaoAgrotoxicos.Models.propriedade

@{
    ViewBag.Title = "Deletar";
}


<h2>Exemplo Deletar </h2>
<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Deletar Propriedade</h4>
            </div>
            @Html.AntiForgeryToken()

            <div class="modal-body">

                <div class="modal-body">
                    <h5><b>Você realmente deseja deletar esse registro?</b></h5>
                    <dt>
                        <label for="nome">Nome</label>
                        <dd>
                            @Html.DisplayFor(model => model.nome)
                        </dd>
                        <label for="nome">Nome Proprietário</label>
                        <dd>
                            @Html.DisplayFor(model => model.nome_proprietario)
                        </dd>
                        <label for="nome">Endereço</label>
                        <dd>
                            @Html.DisplayFor(model => model.endereco)
                        </dd>

</div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Deletar" class="btn btn-danger" />
                        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
                    </div>
                </div>
            </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
